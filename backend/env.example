# Environment Variables for BrightMinds Application
# Copy this file to .env and fill in your actual values

# Database Configuration (Required for Production)
SPRING_DATASOURCE_URL=jdbc:postgresql://your-neon-host:5432/your-database-name
SPRING_DATASOURCE_USERNAME=your-neon-username
SPRING_DATASOURCE_PASSWORD=your-neon-password

# HikariCP Connection Pool Configuration (Optional - has secure defaults)
HIKARI_MAX_POOL_SIZE=10
HIKARI_MIN_IDLE=5
HIKARI_CONNECTION_TIMEOUT=30000
HIKARI_IDLE_TIMEOUT=600000
HIKARI_MAX_LIFETIME=1800000
HIKARI_VALIDATION_TIMEOUT=5000

# JPA Configuration
SPRING_JPA_HIBERNATE_DDL_AUTO=validate

# Security Configuration (Required for Production)
JWT_SECRET=your-256-bit-base64-encoded-jwt-secret
TEACHER_SECRET_CODE=your-256-bit-base64-encoded-teacher-secret

# CORS Configuration (Optional - has secure defaults)
ALLOWED_ORIGINS=https://brightminds-cit.vercel.app,https://your-frontend-domain.com

# Application Configuration
SPRING_PROFILES_ACTIVE=prod
SHOW_SQL=false
FORMAT_SQL=false
LOG_LEVEL=WARN
SQL_LOG_LEVEL=WARN
BINDER_LOG_LEVEL=WARN
SWAGGER_ENABLED=false
PORT=8080
JWT_EXPIRATION=86400000

# Development Defaults (used when environment variables are not set)
